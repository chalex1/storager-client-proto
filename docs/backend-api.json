GET /periods // <- get all periods


// --- TERRITORIES ---

territory: {

	code: string,
	title: string,
	description: string,
	terminal: boolean, // (calculated)

	parentCode: string
}

GET /territories/tops // <- get top-level territories
GET /territories/{code} // <- get speocific territory by code
GET /territories/{code}/descendants // <- get descendants of code specific territory

POST /territories // <- add new territory
PUT /territories/{code} // <- update territory
DELETE /territories/{code} // <- delete territory (soft)


// --- INDICATORS ---

indicator: {

	code: string,
	title: string,
	description: string,
	terminal: boolean, // (calculated)

	parentCode: string	
}

GET /indicators/tops // <- get top-level indicators
GET /indicators/{code} // <- get speocific indicator by code
GET /indicators/{code}/descendants // <- get descendants of code specific indicator

POST /indicators // <- add new indicator
PUT /indicators/{code} // <- update indicator
DELETE /indicators/{code} // <- delete indicator (soft)


