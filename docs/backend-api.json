// --- PATCH ---

patch: {

	id: string,
	createdAt: string, // <- timestamp
	providerId: string,
	status: string,
	indicatorInfos: patchIndicatorInfo[]
}

patchIndicatorInfo: {

	indicatorId: string,
	totalPoints: number
}

GET /patches?{offset=0}&{limit=20}&{providerTitle=null}&{status=null}&{since=null}&{until=now} // <- get patches
GET /patches/{id} // <- get specific patch



